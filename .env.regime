# ========================================
# Regime Trading Configuration (v2.0)
# ========================================
# Copy these settings to your .env file or use as-is

# Enable regime detection features
ENABLE_REGIME_DETECTION=True
REGIME_LOOKBACK_BARS=50

# AUTO REGIME DETECTION
# Automatically detect regime during sentiment analysis
# When enabled, regime info is added to analysis results
AUTO_DETECT_REGIME=True

# REGIME-BASED FILTERING
# Only allow trades in certain market conditions
# Options: FAVORABLE, MODERATE, CAUTIOUS, UNFAVORABLE
FILTER_BY_REGIME=True
ALLOWED_REGIMES=FAVORABLE,MODERATE

# REGIME-BASED POSITION SIZING
# Automatically adjust position size based on regime
# FAVORABLE=100%, MODERATE=70%, CAUTIOUS=40%, UNFAVORABLE=0%
USE_REGIME_POSITION_SIZING=True

# ========================================
# Advanced Regime Thresholds
# ========================================

# Trend Detection (ADX-based)
# ADX_TRENDING_THRESHOLD=25.0    # ADX > 25 = trending
# ADX_STRONG_THRESHOLD=40.0      # ADX > 40 = strong trend
# EFFICIENCY_THRESHOLD=0.5       # Price efficiency for strong trends

# Volatility Percentiles
# VOL_VERY_LOW=0.2       # <20th percentile
# VOL_LOW=0.4            # 20-40th percentile
# VOL_NORMAL_MAX=0.7     # 40-70th percentile = normal
# VOL_HIGH=0.9           # >90th percentile = very high

# Volume Percentiles
# VOLUME_DRY=0.25        # <25th percentile
# VOLUME_NORMAL_MAX=0.75 # 25-75th percentile = normal
# VOLUME_ELEVATED=0.95   # >95th percentile

# ========================================
# Quick Configurations
# ========================================

# CONSERVATIVE (safest):
# FILTER_BY_REGIME=True
# ALLOWED_REGIMES=FAVORABLE
# USE_REGIME_POSITION_SIZING=True

# MODERATE (balanced):
# FILTER_BY_REGIME=True
# ALLOWED_REGIMES=FAVORABLE,MODERATE
# USE_REGIME_POSITION_SIZING=True

# AGGRESSIVE (maximum trading):
# FILTER_BY_REGIME=False
# USE_REGIME_POSITION_SIZING=False

# CUSTOM (you decide):
# Mix and match settings above
